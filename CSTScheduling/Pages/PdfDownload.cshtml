@page "/PdfDownload"
@model CSTScheduling.Pages.PdfDownloadModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CISR[0].Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CISR[0].Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
